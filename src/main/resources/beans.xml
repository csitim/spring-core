<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myBeanNameAwarePostProcessor" class="com.csitim.sc.postprocessors.MyBeanNameAwarePostProcessor"></bean>

   <!-- <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="com.csitim.sc.model.Weapon" value="com.csitim.sc.propertyeditor.WeaponPropertyEditor"/>
            </map>
        </property>
    </bean> -->

    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="com.csitim.sc.converter.WeaponConverter"/>
            </list>
        </property>
    </bean>

    <bean id="ogre" class="com.csitim.sc.model.Character">
        <constructor-arg value="Ogre"/>
        <constructor-arg value="100"/>
        <constructor-arg value="custom weapon,1000"/>
    </bean>

    <bean id="igen" class="com.csitim.sc.model.Character">
        <constructor-arg value="Igen"/>
        <constructor-arg value="100"/>
        <constructor-arg ref="ogreWeapon"/>
    </bean>

    <bean id="ogreWeapon" class="com.csitim.sc.model.Weapon" init-method="myInitMethod" destroy-method="myDestroyMethod" >
        <constructor-arg value="Ogre's weapon"/>
        <constructor-arg value="50"/>
    </bean>

</beans>